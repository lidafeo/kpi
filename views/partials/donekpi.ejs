<% if(kpi) {%>
<h3>Текущие показатели ПЭД:</h3>
<table>
	<tr>
		<th>Шифр показателя эффективности</th>
		<th>Показатель</th>
		<th width="120">Оценка</th>
	</tr>
	<% for(let u = 0; u < kpi.length; u++) {%>
		<% if(kpi[u].length != 0) {%>
			<tr>
				<td><%=kpi[u][0].section[0] + "." %></td>
				<td colspan="2"><h4>Раздел <%=(u+1) + ". " + kpi[u][0].section %></h4></td>
			</tr>
			<% for(let i = 0; i < kpi[u].length; i++) {%>
				<% let arr = kpi[u]; %>
				<% if(arr[i].type == 1) {%>
					<tr>
						<td><%=arr[i].name %></td>
						<td><%=arr[i].description %></td>
						<td><big><%=arr[i].userball[0] %></big></td>
					</tr>
				<%} %>
				<% if(arr[i].type == 2) {%>
					<tr>
						<td rowspan=<%=(arr[i].substrings.length + 1) + "" %>><%=arr[i].name %></td>
						<td colspan="2"><%=arr[i].description %></td>
					</tr>
					<% for(let j = 0; j < arr[i].substrings.length; j++) {%>
					<tr>
						<td><%=arr[i].substrings[j].description %></td>
						<td><big><%=arr[i].userball[j] %></big></td>
					</tr>
					<%} %>
				<%} %>
			<%} %>
		<%} %>
	<%} %>
</table>
<%} %>
<% if(!kpi) {%>
<h4>Нет оценок</h4>
<%} %>