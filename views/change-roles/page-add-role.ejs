<!DOCTYPE html>
<html>
<head>
	<title>Добавление роли</title>
	<%- include("../common/head.ejs")%>
</head>
<body class="d-flex flex-column h-100">
	<header>
		<%- include("../common/menu.ejs") %>
	</header>
	<main role="main" class="flex-shrink-0">
		<div class="content container-fluid">
			<h2>Добавление новой роли</h2>
			<hr>
			<form name="adduser" action="" method="post" class="needs-validation" id="form-send" novalidate>
				<div class="form-group row">
					<label for="role" class="col-sm-2 col-form-label">Роль</label>
					<div class="col-sm-10">
						<input type="text"name="role" class="form-control" id="role" maxlength="100" autocomplete="off" required>
						<div class="invalid-feedback">
							Пожалуйста введите название роли
						</div>
					</div>
				</div>
				<div class="form-group row">
					<div class="col-sm-2">Права</div>
					<div class="col-sm-10">
						<% for(let i = 0; i < rights.length; i++) {%>
							<div class="form-check">
								<input class="form-check-input" type="checkbox" name="rights" id="right<%=i%>" value="<%=rights[i].name%>">
								<label class="form-check-label" for="right<%=i%>">
									<%=rights[i].name + " (" + rights[i].comment + ")"%>
								</label>
							</div>
						<%} %>
					</div>
				</div>
				<div class="form-group row">
					<div class="col-sm-2">
					</div>
					<div class="col-sm-10">
						<button type="submit" class="btn btn-primary btn-lg">Добавить</button>
					</div>
				</div>
			</form>
		</div>
	</main>

	<div class="footer mt-auto py-3">
		<%- include("../common/footer.ejs") %>
	</div>
	<%- include("../common/modal.ejs") %>

	<%- include("../common/scripts.ejs")%>
	<script type="text/javascript" src="/scripts/check-form.js"></script>
	<script type="text/javascript" src="/scripts/send-form.js"></script>
</body>
</html>