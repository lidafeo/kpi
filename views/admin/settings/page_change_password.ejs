<!DOCTYPE html>
<html>
<head>
	<title>Изменить пароль</title>
	<%- include("../partials/head.ejs")%>
	<link rel="stylesheet" type="text/css" href="/general_style/vertical-menu.css">
</head>
<body>
	<div class="wrapper">
		<%- include("../partials/menu.ejs") %>
		<div class="content">
			<div class="page">
				<%- include("../partials/settings-menu.ejs") %>
				<div class="formborderadmin">
					<h2 class="title-page">Изменить пароль</h2>
					<form action=""  id="form-edit-pass" class="form-inner" method="post">
                        <% if(action == 1) {%>
                            <p class="uspeshno">Пароль изменен</p>
                        <%} %>
                        <% if(action == 2) {%>
                            <p class="errormess">Ошибка добавления пользователя</p>
                        <%} %>
                        <div class="error-form" id="error"></div>
                        <div class="col-form">
                              <label for="password1">Новый пароль</label>
                              <input type="password" name="password" id="password1" required>
                         </div>
                        <div class="col-form">
                               <label for="password2">Повторите пароль</label>
                               <input type="password" name="password2" id="password2" required>
                        </div>
						<input type="submit" class="buttonmypage" value="Изменить">
					</form>
				</div>
			</div>
		</div>
		
		<div class="footer">
			<%- include("../../partials/footer.ejs") %>
		</div>
    </div>

	<%- include("../partials/scripts.ejs")%>
	<script type="text/javascript" src="/scripts/settings.js"></script>
</body>
</html>