<!DOCTYPE html>
<html>
<head>
	<title>Удаление пользователя</title>
	<%- include("../common/head.ejs")%>
</head>
<body>
    <%- include("../common/menu.ejs") %>
    <div class="wrapper">
        <div class="content container-fluid">
			<% if(action == 1) {%>
				<p class="uspeshno">Успешно</p>
			<%} %>
			<% if(action == 2) {%>
				<p class="errormess">Ошибка удаления</p>
			<%} %>
			<form name="deleteuser" action="" 
			class="formborderadmin" method="post" autocomplete="off">
				<label for="users">Сотрудник:</label>
				<input name="user" list="users" style="width: 35%; font-size: 16px;" required>
				<datalist id="users">
					<% for(let i = 0; i < users.length; i++) {%>
						<option value="<%=users[i].login%>"><%=(users[i].name + ", " + users[i].role)%></option>
					<%} %>
				</datalist>
				<input type="submit" class="buttonmypage" name="sub" value="Удалить">
			</form>
		</div>
		
		<div class="footer">
			<%- include("../common/footer.ejs") %>
		</div>
	</div>

	<%- include("../common/scripts.ejs")%>

</body>
</html>