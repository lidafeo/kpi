<!DOCTYPE html>
<html>
<head>
	<title>Добавление пользователя</title>
	<%- include("../common/head.ejs")%>
</head>
<body>
	<%- include("../common/menu.ejs") %>
	<div class="wrapper">
		<div class="content container-fluid">
			<% if(action == 1) {%>
				<p class="uspeshno">Успешно</p>
			<%} %>
			<% if(action == 2) {%>
				<p class="errormess">Ошибка добавления пользователя</p>
			<%} %>
			<form name="adduser" action="" method="post" class="form-add" style="margin-top: 5%;">
				<div class="form-inner">
					<h3>Добавить пользователя</h3>
					<div class="error-text" id="error"></div>
					<div>
						<label>ФИО</label>
						<input type="text" name="name" id="name" placeholder="Иванов Иван Иванович" required>
					</div>
					<div>
						<label>Роль</label>
						<select name="role" id="role">
							<% for(let i = 0; i < roles.length; i++) {%>
							<option><%=roles[i].role%></option>
							<%} %>
						</select>
					</div>
					<div id="position-div">
						<label>Должность</label>
						<select name="position" id="position">
							<% for(let i = 0; i < positions.length; i++) {%>
							<option><%=positions[i].position%></option>
							<%} %>
						</select>
					</div>
					<div id="faculty-div">
						<% if(faculty.length != 0) {%>
							<label>Факультет</label>
							<select name="faculty" id="faculty">
								<% for(let i = 0; i < faculty.length; i++) {%>
									<option><%=faculty[i]%></option>
								<%} %>
							</select>
						<%}%>
					</div>
					<input type="hidden" name="numdepartment" id="numdepartment">
					<div id="department-div">
						<label>Кафедра</label>
						<select name="department" id="department">
							<% for(let i = 0; i < department.length; i++) {%>
								<option><%=department[i]%></option>
							<%} %>
						</select>
					</div>
					<div>
						<label>login</label>
						<input type="text" name="login" id="login" placeholder="ivanov" required>
					</div>
					<div class="form-group row">
						<label for="password" class="col-sm-2 col-form-label">Пароль</label>
						<div class="col-sm-9">
							<input type="text" class="form-control" id="password" name="password" required autocomplete="off">
						</div>
						<div class="col-sm-1">
							<a href="#" id="generate-pass"><img src="/img/icons/arrow-repeat.svg" title="сгенерировать" width="28px"></a>
						</div>
					</div>
					<input type="submit" name="submit" id="add" value="Добавить">
				</div>
			</form>
		</div>
		
		<div class="footer">
			<%- include("../common/footer.ejs") %>
		</div>
	</div>

	<%- include("../common/scripts.ejs")%>
	<script type="text/javascript" src="/plugins/carhartl-jquery-cookie-92b7715/jquery.cookie.js"></script>
	<script type="text/javascript" src="/scripts/change-users/add-user.js"></script>
</body>
</html>