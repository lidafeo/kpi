<% if(textErr) {%>
	<p class="errormess">Этот ПЭД недоступен для Вашей должности</p>
<%} %>
<% if(!textErr) {%>
	<h4><%=desc[0].description %></h4>
	<hr>
	<button id="plus" class="btn btn-outline-primary mb-md-2">+ Добавить значение</button>
	<div id="plusdiv">
		<form enctype="multipart/form-data" name="form1" action="/upload" method="post" style="flex-direction: column; display: flex; justify-content: flex-start;">
		<div style="margin-top: 10px;"><h4>Добавление нового значения ПЭД</h4>
			<input type="hidden" name="name" id="name">
			<% if(desc[0].type == 2) {%>
				<% for(let j = 0; j < desc[0].count_criterion; j++) {%>
					<input type="radio" name="radio" id="radio" value=<%=j+""%> checked>
					<%=desc[j].criterion_description %>
				<%} %>
			<%} %>
			</div>
		<div style="margin-top: 10px;">  
			<label>Дата реализации (выполнения) ПЭД </label>
			<input type="date" name="date" id="datekpi" required>
			<br/>
			<% if(!desc[0].indicator_sum) {%> 
			</div>
		<div style="margin-top: 15px;"> <label>Значение: </label>
			<input type="number" min="0" max="1000" name="value" id="value" required>
			<%} %>
			<% if(desc[0].indicator_sum) {%>
			<input type="hidden" name="value" value="1" id="value">
			<%} %>
			</div>
		<div style="margin-top: 20px;"> <label>Пояснительная записка: </label> 
			<textarea name="text" id="text" maxlength="1024"></textarea>
			<br/><br/>
			<input class="file" type="file" name="file" id="file">
			<br/><br/>
		</div>

			<button id="addkpi" class="btn btn-outline-success">Добавить показатель</button>
		</form>
		<hr>
	</div>
	<% if(kpi.length != 0) {%>
		<table class="table border-color-f">
			<thead>
				<tr>
					<th scope="col">Дата добавления</th>
					<th scope="col">Дата реализации</th>
					<th scope="col">Текст</th>
					<th scope="col">Файл</th>
					<% if(desc[0].type == 2) {%>
						<th scope="col">Показатель</th>
					<%} %>
					<th scope="col">Статус</th>
					<th scope="col">Автор проверки</th>
					<th scope="col">Пояснение от автора проверки</th>
				</tr>
			</thead>
			<tbody>
			<% for(let i = 0; i < kpi.length; i++) {%>
				<tr>
					<td><%=kpi[i].modifydate %></td>
					<td><%=kpi[i].modifystart_date%></td>
					<td><%=kpi[i].text %></td>
					<% if(kpi[i].file != "" && kpi[i].file != null) {%>
						<td><a href=<%="/upload-file?file="+kpi[i].file %> download=""><img src="/img/download.png" alt="Скачать файл"></a></td>
					<%} %>
					<% if(kpi[i].file == "" || kpi[i].file == null) {%>
						<td></td>
					<%} %>
					<% if(desc[0].type == 2) {%>
						<td><%=desc[kpi[i].number_criterion].criterion_description %></td>
					<%} %>
					<% if(!kpi[i].valid) {%>
						<td class="text-danger">Недействительно</td>
						<td><%=kpi[i].name_author %></td>
						<td><%=kpi[i].text_verify %></td>
					<%} %>
					<% if(kpi[i].valid) {%>
						<td class="text-success">Выполнено</td>
						<td></td>
						<td></td>
					<%} %>
				</tr>
			<%} %>
			</tbody>
		</table>
	<%} %>
	<% if(kpi.length == 0) {%>
		<p>Нет выполненных значений ПЭД</p>
	<%} %>
<%} %>