<!DOCTYPE html>
<html>
<head>
	<title>Настройки</title>
    <%- include("partials/head.ejs")%>
</head>
<body>
	<div class="wrapper">
		<%- include("partials/menu.ejs") %>
		<div class="content">
            <h1>Настройки</h1><hr>
            <% if(action == 1) {%>
                <p class="uspeshno">Успешно</p>
            <%} %>
            <% if(action == 2) {%>
                <p class="errormess">Ошибка добавления пользователя</p>
            <%} %>
            <form class="form-add form-inner" id="form-edit-pass" method="POST">
                <h3>Изменение пароля</h3>
                <div class="error-form" id="error"></div>
                <div class="col-form">
                    <label for="password1">Новый пароль</label>
                    <input type="password" name="password" id="password1" required>
                </div>
                <div class="col-form">
                    <label for="password2">Повторите пароль</label>
                    <input type="password" name="password2" id="password2" required>
                </div>
                <div class="col-form">
                    <input type="submit" class="buttonmypage" id="but-file2" value="Изменить">
                </div>
            </form>
		</div>
		<div class="footer">
			<%- include("../partials/footer.ejs") %>
		</div>
    </div>

    <%- include("partials/scripts.ejs")%>
	<script type="text/javascript" src="/scripts/settings.js"></script>
</body>
</html>